        "from collections import deque\n",
        "\n",
        "def water_jug_solver(jug1, jug2, target):\n",
        "    \"\"\"Simulate Water Jug Problem solver with step-by-step reasoning.\"\"\"\n",
        "    visited = set()\n",
        "    queue = deque()\n",
        "    queue.append((0, 0, []))  # (jug1_amount, jug2_amount, steps)\n",
        "\n",
        "    while queue:\n",
        "        a, b, steps = queue.popleft()\n",
        "        if a == target or b == target:\n",
        "            return steps\n",
        "        if (a, b) in visited:\n",
        "            continue\n",
        "        visited.add((a, b))\n",
        "\n",
        "        # Possible moves\n",
        "        moves = [\n",
        "            (jug1, b, f\"Fill jug1 to {jug1} liters\"),\n",
        "            (a, jug2, f\"Fill jug2 to {jug2} liters\"),\n",
        "            (0, b, f\"Empty jug1\"),\n",
        "            (a, 0, f\"Empty jug2\"),\n",
        "            (min(jug1, a+b), max(0, a+b-jug1), f\"Pour jug2 -> jug1\"),\n",
        "            (max(0, a+b-jug2), min(jug2, a+b), f\"Pour jug1 -> jug2\"),\n",
        "        ]\n",
        "        for new_a, new_b, step in moves:\n",
        "            queue.append((new_a, new_b, steps + [step]))\n",
        "    return [\"No solution found\"]\n",
        "\n",
        "# --- Input ---\n",
        "jug1_size = int(input(\"Enter size of Jug 1 (litres): \"))\n",
        "jug2_size = int(input(\"Enter size of Jug 2 (litres): \"))\n",
        "target_litres = int(input(\"Enter target litres to measure: \"))\n",
        "\n",
        "# --- Solve ---\n",
        "steps = water_jug_solver(jug1_size, jug2_size, target_litres)\n",
        "\n",
        "# --- Simulate Different Prompting Styles ---\n",
        "print(\"\\n--- Regular Prompt Style ---\")\n",
        "print(f\"The solution is: {steps[-1]} (final step)\")\n",
        "\n",
        "print(\"\\n--- Chain-of-Thought Style ---\")\n",
        "for i, s in enumerate(steps, 1):\n",
        "    print(f\"Step {i}: {s}\")\n",
        "\n",
        "print(\"\\n--- Few-Shot Style ---\")\n",
        "example_steps = [\n",
        "    \"Fill small jug, pour into large jug, repeat until target achieved\"\n",
        "]\n",
        "print(\"Pattern Example:\", example_steps[0])\n",
        "print(\"Applying pattern:\")\n",
        "for s in steps:\n",
        "    print(\"-\", s)\n"
      ]
    }
  ]
}